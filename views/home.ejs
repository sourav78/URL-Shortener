<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table{
            margin-top: 40px;
            border-collapse: collapse;
        }

        th, td{
            font-size: 18px;
            padding: 8px 16px;
        }
    </style>
</head>
<body>
    <h1>This is home page</h1>

    <% if (locals.id) { %>
        <p>Generated url: http://localhost:3001/url/<%= id %></p>
    <% } %>

    <form method="POST" action="/url">
        <label>Enter your URL:</label>
        <input type="text" name="url" placeholder="https://example.com">
        <button type="submit">Gneerate</button>
    </form>

    <div>
        <% if (locals.urls) { %>
            <table border="1">
                <thead>
                    <th>Sl. No</th>
                    <th>Short Url</th>
                    <th>Redeirect URL</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url, ind) => { %>
                        <tr>
                            <td><%= ind + 1 %></td>
                            <td><%= url.shortUrl %></td>
                            <td><%= url.redirectUrl %></td>
                            <td><%= url.visitedHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>